<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.besttime.ui.MainActivity">

    <EditText
        android:id="@+id/smsMessage_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SMS Message"/>

    <EditText
        android:id="@+id/phoneNumber_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/smsMessage_textView"
        android:hint="Phone number"/>


    <Button
        android:id="@+id/sendSms_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneNumber_TextView"
        android:layout_centerInParent="true"
        android:text="Send SMS"/>

</RelativeLayout>